<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.PasswordField?>

<?import java.net.*?>


<VBox alignment="CENTER_LEFT" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
     fx:controller="com.example.javafxproject.LoginUsuarioController">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <VBox alignment="CENTER" spacing="10.0">
        <Label text="Iniciar Sessão" styleClass="titulo"/>
        <Label text="Realize o seu login preenchendo o formulário abaixo!." />
    </VBox>

    <Label text="Email:" />
    <TextField fx:id="txfEmail" promptText="Insira o seu endereço de email" />

   <Label text="Senha:" />
    <PasswordField fx:id="txfSenha" promptText="Insira aqui a sua senha" />

    <VBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button text="Entrar" onAction="#Entrar" />
    </VBox>

    <VBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Não é cadastrado ainda?" />
        <Button text="Cadastre-se" onAction="#OnActionCadastar" />
    </VBox>

    <stylesheets>
        <URL value ="@style.css"/>
    </stylesheets>
</VBox>
