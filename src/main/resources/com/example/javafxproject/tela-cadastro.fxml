<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
fx:controller="com.example.javafxproject.CadastroController">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label text="Cadastrar novo usuário" /> <!--sempre que for fechar uma propriedade, a barra vem antes dela-->

    <Label text="Nome:" />
    <TextField fx:id="nomeTextField" promptText="Insira seu nome completo" />

    <Label text="E-mail:" />
    <TextField fx:id="emailTextField" promptText="Insira seu e-mail" />

    <Label text="Senha:" />
    <PasswordField fx:id="senhaPasswordField" promptText="Insira sua senha" />

    <Label text="Data de Nascimento:" />
    
    <!--DATEPICKER É USADO PARA SELECIONAR DATAS-->
    <DatePicker fx:id="dataNascimentoDatePicker" />

    <Button text="Cadastrar" onAction="#cadastrarUsuario" />
</VBox>
